/* pages/component/Swiper/index.wxss */

/* 定位 */

.locate-item {
  display: inline-flex;
  position: absolute;
  top: 0;
  z-index: 99;
  right: 30rpx;
}

.locate-item .locate-icon {
  font-size: 36rpx;
  margin: 28rpx 0rpx 0 0;
  color: #333;
}

.locate-item .shop-name {
  color: #646464;
  font-size: 28rpx;
  font-weight: 400;
  margin: 8rpx 0;
  line-height: 75rpx;
}

.locate-item .distance {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.arrow-icon {
  color: #777;
  font-size: 32rpx;
  margin: 28rpx 0 0 10rpx;
  font-weight: 300;
}

/* logo */

.logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 30%;
  height: 9%;
  z-index: 40;
  text-align: center;
}

.logo image {
  width: 100%;
  height: 100%;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
}


/* mask */

.bg-mask-top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: -webkit-linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  background: linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  height: 86rpx;
  z-index: 30;
}

.bg-mask-bottom {
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  background: -webkit-linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  background: linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  height: 36rpx;
  -webkit-transform: rotate(180reg);
  transform: rotate(180deg);
  z-index: 30;
}
