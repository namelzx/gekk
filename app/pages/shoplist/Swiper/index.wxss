/* pages/component/Swiper/index.wxss */

/* 定位 */

.locate-item {
  display: inline-flex;
  position: absolute;
  top: 0;
  z-index: 99;
  right: 30rpx;
}

.locate-item .locate-icon {
  font-size: 40rpx;
  margin: 24rpx 0rpx 0 0;
  color: #333;
}

.locate-item .shop-name {
  color: #646464;
  font-size: 28rpx;
  font-weight: 400;
  margin: 8rpx 0;
  line-height: 75rpx;
}

.locate-item .distance {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.arrow-icon {
  color: #777;
  font-size: 32rpx;
  margin: 24rpx 0 0 10rpx;
  font-weight: 300;
}

/* logo */

.logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 15%;
  height: 9%;
  z-index: 40;
}

.logo image {
  width: 100%;
  height: 100%;
}

/* 轮播图 */

.container {
  position: relative;
  margin: 50rpx 0;
}

.container  swiper {
  height: 480rpx;
  background: #e5e5e5;
}

.slide-image {
  width: 100%;
}

swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  bottom: 50rpx;
}

/* 设置点点的样式 */

swiper .wx-swiper-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  display: inline-flex;
  /* 这里设置点点之间的距离 */
  margin-left: 10rpx;
  justify-content: space-between;
}

swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #fff;
  border-radius: 50%;
}

/* 当前点点的样式 */

swiper .wx-swiper-dot-active::before {
  background: #e45265 !important;
  border-radius: 50%;
}

/* mask */

.bg-mask-top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: -webkit-linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  background: linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  height: 86rpx;
  z-index: 30;
}

.bg-mask-bottom {
  position: absolute;
  bottom: -1rpx;
  left: 0;
  right: 0;
  background: -webkit-linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  background: linear-gradient(-2deg, transparent 30rpx, #fff 33rpx);
  height: 60rpx;
  -webkit-transform: rotate(180reg);
  transform: rotate(180deg);
  z-index: 30;
}
