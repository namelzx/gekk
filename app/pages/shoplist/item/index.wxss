/* pages/shop/item/index.wxss */

.cmd-item {
  border: 1px solid #f5f5f5;
  padding: 10rpx 10rpx 20rpx 16rpx;
  background: #fff;
  display: inline-block;
  width: 43%;
  margin: 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 6rpx 2rpx #f5f5f5;
}

.img-item image {
  width: 200rpx;
  height: 200rpx;
  max-width: 200rpx;
  max-height: 200rpx;
  margin: 10rpx 52rpx;
}

.cmd-title {
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #333;
  width: 310rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price {
  margin: 10rpx;
}

.price .cur-price {
  color: #e65146;
}

.price .old-price {
  margin-left: 10rpx;
  text-decoration: line-through;
  color: #999;
}

.rate {
  display: flex;
  font-size: 20rpx;
  color: #999;
}

.rate text:first-child {
  flex: 1;
}
