.bottom {
  background: linear-gradient(to right, #fe6b68, #ff6b8f);
  border-radius: 20rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

button {
  font-size: 28rpx;
  border: none;
  margin: 0;
  /* padding: 20rpx 30rpx; */
  margin-bottom: 10rpx;
  background: #fff;
}

button.wx-login {
  margin: 140rpx auto;
