/* pages/home/distributor/team/index.wxss */

.team-total-num {
  background: #f7f7f7;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  color: #8d8d8d;
}

.member-info {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.member-avatar {
  width: 16%;
}

.member-avatar image {
  width: 88rpx;
  height: 88rpx;
  max-height: 88rpx;
  max-width: 88rpx;
  border-radius: 50%;
  margin: 0 10rpx;
}

.member-join-time {
  width: 70%;
  color: #333;
  font-size: 28rpx;
}

.member-join-time .join-time {
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.extend {
  width: 20%;
  font-size: 24rpx;
  line-height: 94rpx;
  text-align: center;
  min-width: 150rpx;
}

.member-effect {
  display: flex;
  padding: 10rpx 30rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.member-effect text {
  flex: 1;
  color: #333;
  font-size: 24rpx;
  padding-left: 20rpx;
}

.member-effect text:last-child {
  text-align: right;
  margin-right: 30rpx;
}
