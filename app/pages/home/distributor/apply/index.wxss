/* pages/home/distributor/apply/index.wxss */

.apply-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f7f7f7;
}

.apply-bg {
  height: 0;
  padding-bottom: 39%;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.apply-input-wrapper {
  padding: 20rpx 20rpx;
  background: #fff;
  position: absolute;
  top: 180rpx;
  left: 8%;
  width: 80%;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx 2rpx #b6b6b6;
}

.input-form {
  overflow: hidden;
  padding: 30rpx 30rpx 0;
}

.input-item {
  position: relative;
}

.avatar {
  position: absolute;
  top: -60rpx;
  right: 40rpx;
  border-radius: 50%;
  display: block;
  border: 1px solid #d1d1d1;
  width: 92rpx;
  height: 92rpx;
}

.avatar image {
  width: 88rpx;
  height: 88rpx;
  max-width: 88rpx;
  max-height: 88rpx;
  border-radius: 50%;
  margin: 1rpx;

}

.input-title {
  border-bottom: 1px solid #f5f5f5;
  padding: 16rpx 20rpx 24rpx 0;
  color: #333;
}

.input-filed .field-index--van-field.van-cell.van-cell--borderless {
  background: #f9f7f8;
  margin: 20rpx 0;
  border-radius: 12rpx;
}

.van-cell__title {
  color: #838383;
}

.apply-rules {
  padding: 0 0 0 110rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #666;
  position: relative;
}

.apply-rules text {
  color: #000;
  font-size: 28rpx;
}

.apply-rules .rule-checkbox {
  display: inline-block;
  position: absolute;
  top: 6rpx;
  left: 70rpx;
}

.rule-checkbox .van-checkbox__icon {
  width: 28rpx;
  height: 28rpx;
  font-size: 26rpx;
}

.rule-checkbox .van-icon.van-icon-success {
  line-height: 28rpx !important;
}

.click-to-apply {
  padding: 16rpx 0;
  text-align: center;
  color: #f5f5f5;
  background: #000;
  width: 70%;
  margin: 30rpx auto;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.fx{
  font-size: 25rpx;
}