/* pages/home/distributor/order/index.wxss */

.order-item {
  display: flex;
  padding: 20rpx 30rpx 0;
  border-bottom: 10rpx solid #f5f5f5;
}

.order-avatar {
  width: 15%;
}

.order-avatar image {
  width: 88rpx;
  height: 88rpx;
  max-height: 88rpx;
  max-width: 88rpx;
  border-radius: 50%;
  margin: 14rpx 6rpx;
}

.order-detail {
  font-size: 24rpx;
  width: 50%;
  color: #333;
}

.order-person, .done-money {
  margin: 10rpx 0;
}

.order-cash {
  color: #999;
}

.order-status {
  width: 35%;
  font-size: 24rpx;
  text-align: right;
  color: #333;
}

.order-status .done-money {
  color: #ee0303;
}

.order-status .done-date {
  color: #999;
  line-height: 46rpx;
}
