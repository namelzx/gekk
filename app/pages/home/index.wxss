/* pages/home/index.wxss */

.home-container {
  padding: 20rpx 30rpx;
}

.header-card {
  background: #000;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 40rpx 30rpx;
  color: #fff;
}

.user-info-wrapper {
  display: flex;
}

.user-info {
  width: 90%;
  display: flex;
}

.user-avatar {
  width: 20%;
  height: 88rpx;
  max-height: 88rpx;
  max-width: 88rpx;
  margin-right: 20rpx;
  margin-top: 12rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name-level {
  flex: 4;
}

.user-name {
  font-size: 28rpx;
  margin-top: 16rpx;
  font-weight: 800;
}

.user-level {
  width: 100%;
  height: 50rpx;
}

.user-name-level .user-level image {
  width: 30%;
  height: 45%;
}

.user-info-wrapper .icon {
  line-height: 110rpx;
  color: #a0a0a0;
}

.user-category {
  display: flex;
  margin-top: 30rpx;
}

.u-category {
  flex: 1;
  text-align: center;
  padding: 10rpx 0 0;
}

.u-category .integral-icon, .u-category .retail-icon, .u-category .profile-icon {
  font-size: 36rpx;
}

.u-category .icon-title {
  font-size: 22rpx;
  line-height: 16rpx;
}

/* 我的订单 */

.my-order {
  border-bottom: 10rpx solid #f5f5f5;
}

.all-order {
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}

.all-order text {
  display: inline-block;
  width: 48%;
  padding: 20rpx 0;
}

.all-order-left {
  text-align: left;
  color: #444;
}

.all-order-right {
  text-align: right;
  padding-right: 4%;
  color: #777;
  font-size: 28rpx;
}

.order-arrow-icon {
  position: absolute;
  right: 0%;
  top: 33%;
  color: #d1d1d1;
  font-size: 32rpx;
  font-weight: 300;
}

.order-category {
  display: flex;
  padding: 20rpx 0;
}

.o-category {
  flex: 1;
  text-align: center;
}

.o-category .o-category-icon {
  font-size: 50rpx;
  color: #555;
}

.o-category .pay-title {
  font-size: 24rpx;
  color: #333;
  line-height: 22rpx;
}

/* 分类栏目 */

.h-category-cell .van-cell {
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  color: #000;
  font-weight: 300;
}

.h-category-cell .van-cell .van-cell__left-icon-wrap {
  font-size: 40rpx;
  margin-right: 30rpx;
  color: #333;
}
