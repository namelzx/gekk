/* pages/home/ticket/index.wxss */

.ticket-container {
  padding: 20rpx 30rpx;
}

.ticket-wrapper {
  width: 700rpx;
  display: flex;
  height: 200rpx;
  margin: 20rpx 0;
}

.ticket-wrapper .ticket-img {
  width: 70%;
  position: relative;
}

.ticket-wrapper .ticket-img image {
  width: 100%;
  height: 100%;
}

.ticket-img-text {
  position: absolute;
  z-index: 9;
  top: 30rpx;
  left: 60rpx;
  text-align: center;
  color: #000;
}

.ticket-img-text .img-text-top {
  font-size: 75rpx;
  font-family: courier;
}

.ticket-img-text .img-text-top text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.ticket-img-text .img-text-bottom {
  font-size: 28rpx;
  font-family: verdana;
}

.ticket-text {
  width: 100%;
  text-align: left;
  background-color: #fff;
  color: #555;
  padding-left: 20rpx;
  padding-top: 30rpx;
  background: #f5f5f5;
  font-size: 28rpx;
}

.get-ticket {
  border: 1px solid #f5f5f5;
  width: 25%;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 4rpx 20rpx;
  background: -webkit-linear-gradient(left, #cdeaf1, #cddaf1);
  background: linear-gradient(to right, #cdeaf1, #cddaf1);
  margin: 20rpx -2rpx;
  text-align: center;
  color: #535353;
}

.ticket-had-token {
  background: #cfcfcf;
  color: #a1a1a1;
}
