/* pages/home/collect/topic/index.wxss */

.learn-container .van-popup.van-popup--center {
  width: 70% !important;
}

.article-wrapper {
  margin: 40rpx 5%;
  position: relative;
}

.article-item {
  background: #fff;
  border: 1px solid #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 0 10px 10px #f5f5f5;
  position: relative;
}

/* 商家logo */

.article-logo {
  width: 100rpx;
  height: 100rpx;
  max-width: 100rpx;
  max-height: 100rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  right: 40rpx;
  top: 55%;
  z-index: 9;
}

.article-logo image {
  width: 100%;
  height: 100%;
}

/* 文章图片 */

.article-item .article-img {
  width: 100%;
  height: 400rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background: #fff;
  position: relative;
}

/* 视频->显示播放按钮 */

.img-mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #00000030;
}

.article-item .article-img image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.article-item .article-img  .img-mask image {
  width: 20%;
  height: 30%;
  margin: 20% 38%;
}

/* 文章标题 */

.article-text {
  padding: 20rpx 16rpx;
}

.article-text .article-title {
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
  padding: 10rpx 0;
  width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 文章描述 */

.article-text .article-desc {
  color: #777;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 36rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商家logo */

.article-logo {
  width: 100rpx;
  height: 100rpx;
  max-width: 100rpx;
  max-height: 100rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  right: 40rpx;
  top: 55%;
  z-index: 9;
  overflow: hidden;
  border: 1px solid #f5f5f5;
}

.article-logo image {
  width: 100%;
  height: 100%;
}

/* 收藏tag */

.like-tag {
  position: absolute;
  top: -4rpx;
  right: 20rpx;
  width: 40rpx;
  height: 62rpx;
  border-radius: unset;
  z-index: 9;
}

.like-tag image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
