/* pages/home/collect/index.wxss */

.header-tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}

.tab-item text {
  display: inline-block;
  color: #666;
  padding: 14rpx 10rpx;
  border-bottom: 2px solid transparent;
  transition: color 1.2s, border 1.2s;
  -webkit-transition: color 1.2s, border 1.2s;
}

.tab-item text.active {
  color: #000;
  font-weight: 500;
  border-bottom: 2px solid #000;
}

.content-item {
  text-align: center;
}
