/* pages/home/collect/goods/index.wxss */

/* 列表 */

.shop-item {
 overflow: hidden;
}

.shop-banner {
  margin: 50rpx 5%;
  background: #fff;
  box-shadow: 0 0 16rpx 2rpx #d1d1d1;
  border-radius: 10rpx;
  position: relative;
}

.like-tag {
  position: absolute;
  top: -4rpx;
  right: 20rpx;
   width: 40rpx;
  height: 62rpx;
  border-radius: unset;
}

.shop-banner .like-tag image {
  width: 100%;
  height: 100%; 
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.shop-banner image {
  width: 100%;
  height: 450rpx;
  max-width: 750rpx;
  max-height: 450rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.shop-name-distance {
  display: flex;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.shop-name {
  width: 70%;
  padding: 10rpx 0 10rpx 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-distance {
  width: 30%;
  position: relative;
  line-height: 60rpx;
  color: #333;
  font-size: 26rpx;
  padding-left: 26rpx;
}

.shop-distance .locate-icon {
  position: absolute;
  left: -6rpx;
  font-size: 30rpx;
  color: #000;
}
