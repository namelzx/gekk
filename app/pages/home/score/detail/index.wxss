/* pages/home/score/detail/index.wxss */

.sign-in {
  padding: 10rpx 30rpx;
  width: 40%;
  margin: 6rpx auto;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #e7c9a4, #e7dacb);
  border-radius: 30rpx;
}

.had-sign-in {
  background: -webkit-linear-gradient(left, #807f7f, #d8d7d6);
}

.scroll-wrapper {
  height: 750rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 2rpx #d1d1d1;
  width: 85%;
  margin: 40rpx auto;
}

.scroll-item {
  display: flex;
  font-size: 26rpx;
  margin: 0px 10px;
  border-bottom: 1px solid #f5f5f5;
  padding: 10rpx;
}

.item-detail {
  width: 80%;
}

.detail-consume {
  color: #333;
  margin: 10rpx 0 4rpx;
}

.detail-time {
  color: #999;
  font-size: 24rpx;
}

.item-change {
  width: 20%;
  text-align: center;
  line-height: 78rpx;
  color: #333;
}
