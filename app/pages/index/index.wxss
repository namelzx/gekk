/**index.wxss**/

/* 定位 */

.container .locate-item {
  padding-left: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container .locate-item .locate-icon {
  position: absolute;
  top: 14rpx;
}

.container .locate-item .link-icon {
  position: relative;
}

.container .locate-item  .link-icon .arrow-icon {
  position: absolute;
  top: -16rpx;
  color: #333;
}

.container .locate-item .shop-name {
  color: #646464;
  font-size: 28rpx;
  font-weight: 400;
  margin: 8rpx 0;
  padding-left: 34rpx;
  padding-right: 4rpx;
}

.container .locate-item .distance {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

/* 商铺范围 */

.locate-area {
  min-height: 750rpx;
  height: 750rpx;
  width: 100%;
  margin-top: 60rpx;
}

.bg-circle {
  width: 680rpx;
  height: 680rpx;
  border-radius: 50%;
  background: #f8f8f8;
  margin: 150rpx auto;
}

.md-circle {
  position: absolute;
  width: 460rpx;
  height: 460rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin: 110rpx;
}

.sm-circle {
  position: absolute;
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  background: #e6e6e6;
  margin: 115rpx;
}

.avatar {
  margin: 60rpx;
  position: relative;
}

/* 用户头像 */

.avatar image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.avatar .username {
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #666;
  font-size: 24rpx;
  display: inline-block;
  padding: 0rpx 25rpx;
  width: 120rpx;
  position: absolute;
  bottom: -30rpx;
  left: -30rpx;
}

/* 用户范围内显示的商铺 */

.mask {
  width: 680rpx;
  height: 680rpx;
  background: rgba(0, 0, 0, 0.0);
  position: fixed;
  top: 240rpx;
  left: 34rpx;
  z-index: 99;
}

.shop-avatar {
  display: inline-block;
  text-align: left;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  position: absolute;
  
}

.shop-avatar image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  box-shadow: 0 0 8rpx 4rpx #cecece;
  z-index: 3;
}

.info-item {
  display: flex;
  border-top-left-radius: 50%;
  border-bottom-left-radius: 50%;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  padding-right: 0 20rpx;
  width: 104rpx;
  color: transparent;
}

.show-text {
  width: 230rpx;
  color: #333;
  transition: width 1.2s, color 2s;
}

.locate-name {
  font-size: 24rpx;
}

.info-item .info-text {
  width: 118rpx;
  display: inline-block;
  height: 35px;
  background: #dfdfdf;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  padding: 0 40rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
  margin-top: 16rpx;
  position: absolute;
  left: 74rpx;
}

.info-item .info-text text {
  line-height: 36rpx;
  font-size: 22rpx;
  text-align: center;
  max-width: 120rpx;
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.lo {
  text-align: center;
}

.lo .zb {
  /* background: #f2f2f2; */
  width: 50%;
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 13rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 40rpx;
  justify-content: center;
  /* border: 1px solid black; */
}

.zb image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
