/**index.wxss**/

/* 定位 */

.container .locate-item {
  padding-left: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container .locate-item .shop-name {
  color: #646464;
  font-size: 28rpx;
  font-weight: 400;
  margin: 8rpx 0;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.container .locate-item .distance {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}

/* 商铺范围 */

.locate-area {
  min-height: 800rpx;
  height: 800rpx;
  width: 100%;
  margin-top: 60rpx;
}

.bg-circle {
  width: 680rpx;
  height: 680rpx;
  border-radius: 50%;
  background: #f8f8f8;
  margin: 150rpx auto;
}

.md-circle {
  position: absolute;
  width: 460rpx;
  height: 460rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin: 110rpx;
}

.sm-circle {
  position: absolute;
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  background: #e6e6e6;
  margin: 115rpx;
}

.avatar {
  margin: 60rpx;
  position: relative;
}

/* 用户头像 */

.avatar image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.avatar .username {
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #666;
  font-size: 24rpx;
  display: inline-block;
  padding: 0rpx 25rpx;
  width: 120rpx;
  position: absolute;
  bottom: -30rpx;
  left: -30rpx;
}

/* 用户范围内显示的商铺 */
.mask {
  width: 680rpx;
  height: 680rpx;
  background: rgba(0, 0, 0, 0.0);
  position: fixed;
  top: 240rpx;
  left: 34rpx;
  z-index: 99;
}

.shop-avatar {
  display: inline-block;
  text-align: left;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  position: absolute;
}

.shop-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 0 8rpx 4rpx #cecece;

}


.info-item {
  display: flex;
  background: #dfdfdf;
  border-top-left-radius: 38%;
  border-bottom-left-radius: 38%;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  padding-right: 0 20rpx;
  width: 230rpx;
}

.info-item .info-text {
  width: 54%;
}

.info-item .info-text text {
  line-height: 36rpx;
  font-size: 22rpx;
  text-align: center;
  max-width: 120rpx;
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}
