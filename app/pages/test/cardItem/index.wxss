/* pages/card/index.wxss */

.card-item {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #57575740;
}

.card-wrapper {
  position: absolute;
  top: 60rpx;
  left: 60rpx;
  right: 60rpx;
  bottom: 100rpx;
  background: #fff;
  z-index: 9;
  border-radius: 20rpx;
  padding: 30rpx;
}

.btn-group {
  position: relative;
}

.btn-group .close-btn {
  position: absolute;
  top: -14rpx;
  right: -10rpx;
  color: #c0c0c0;
  text-align: right;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.img-item {
  margin-top: 50rpx;
}

.img-item image {
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx;
}

.goods-title {
  margin: 10rpx 0;
  font-size: 32rpx;
  color: #444;
  font-weight: 800;
}

.goods-desc .desc-title, .goods-temper .temper-title {
  margin: 16rpx 0;
  color: #777;
}

.goods-desc .desc-content {
  margin-bottom: 10rpx;
}

.goods-desc, .goods-temper {
  font-size: 24rpx;
  color: #aeaeae;
}

.temper-choise .choise-item {
  display: inline-block;
  padding: 10rpx 24rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-right: 10rpx;
  color: #444;
}

.temper-choise .choise-item.active {
  color: #fff;
  background: #d3aa79;
}
.pick-up {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #f5f5f5;
  padding: 30rpx;
}

.pick-up .price-amount-wrapper {
  display: flex;
  margin-bottom: 16rpx;
}

.pick-up .price-amount-wrapper .left-item {
  width: 60%;
  color: #d3aa79;
  font-size: 36rpx;
  padding-left: 10rpx;
}

.left-item text {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.pick-up .price-amount-wrapper .right-item {
  width: 40%;
  text-align: center;
  line-height: 84rpx;
}

.temper-item {
  font-size: 26rpx;
  color: #999;
}

.purchase-btn {
  padding: 18rpx 0;
  margin: 4rpx auto;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #d3aa79;
  border-radius: 16rpx;
}
