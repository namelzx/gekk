/* pages/reads/list-detail/index.wxss */

.detail-wrapper {
  padding: 20rpx 30rpx;
}

/* 大标题 */

.article-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 400;
  text-align: center;
  padding: 10rpx 0 0;
  margin: 20rpx 0 10rpx;
}

.article-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  font-weight: 400;
  padding: 10rpx 0;
}

.article-content {
  font-size: 28rpx;
  font-weight: 400;
  color: #444;
  min-height: 100px;
  line-height: 50rpx;
  letter-spacing: 2rpx;
}

.photo {
  width: 100%;
  height: 620rpx;
}

.photo image {
  width: 100%;
  height: 100%;
}

/* 日期、点击量、点赞量 */

.article-detail, .icon-wrapper {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  color: #5c5c5c;
  font-size: 28rpx;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
}

.article-detail .detail-left {
  width: 60%;
  text-align: left;
  flex: 1;
}

.article-detail .detail-right, .icon-wrapper .icon-left {
  width: 34%;
  flex: 1;
  margin-right: 10rpx;
  display: flex;
  text-align: right;
}

.article-detail .detail-right .num, .icon-wrapper .icon-left .num {
  display: inline-block;
}

.article-detail .detail-right .click-num {
  width: 60%;
  margin-right: 20rpx;
  position: relative;
}

.article-detail .detail-right .click-num .num {
  position: absolute;
  left: 115rpx;
}

.article-detail .detail-right .icon-eyes {
  position: absolute;
  left: 80rpx;
  top: 2rpx;
}

.article-detail .detail-right  .click-good {
  width: 36%;
  position: relative;
}

.article-detail .detail-right .icon-good {
  position: absolute;
  left: 10rpx;
  top: 2rpx;
}

.article-detail .detail-right  .click-good .num {
  position: absolute;
  left: 44rpx;
}

/* 用户评论 */

.article-ratings {
  background: #fff;
  box-shadow: 0 0 4rpx 4rpx #fff;
  border-top: 1px solid #f5f5f5;
  margin-bottom: 100rpx;
}

.rate-user {
  padding: 30rpx 20rpx;
  display: flex;
}

.user-name {
  flex: 1;
  margin-left: 16rpx;
  line-height: 60rpx;
  color: #333;
  font-weight: 400;
  font-size: 28rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.rate-content {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  padding: 0rpx 20rpx;
  margin: 8rpx 0;
}

.icon-left {
  flex: 1;
  display: flex;
  margin-left: 20rpx;
}

.good-jobs {
  width: 40%;
}

.good-jobs, .comments {
  position: relative;
  text-align: left;
}

.good-jobs .icon-good, .comments .icon-comment {
  position: absolute;
  top: 2rpx;
  left: 0;
}

.good-jobs .num, .comments .num {
  position: absolute;
  left: 35rpx;
}

.icon-right {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

/* 社交模块 */

.social {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  width: 100%;
  background: #fff;
  display: flex;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.rate-input {
  width: 65%;
  background: #f5f5f5;
  position: relative;
  margin-left: 30rpx
}

.eidt-icon {
  position: absolute;
  top: 25%;
  left: 3%;
  font-size: 40rpx;
  color: #d5d5d5;
}

.rate-input input {
  background: #f5f5f5;
  padding: 18rpx 0rpx;
  display: inline-block;
  position: absolute;
  width: 85%;
  left: 15%;
  font-size: 28rpx;
  color: #333;
}

.social-btn {
  width: 55%;
  display: flex;
}
.s-btn {
  font-size: 40rpx;
}
.good-btn, .share-btn {
  flex: 1;
  text-align: center;
}
.good-btn {
  margin-left: 50rpx;
}


.social-btn button.on-share-btn {
  margin-right: 20rpx;
  line-height: unset;
  background: #fff;
  
}
.social-btn button.on-share-btn::after {
  border: none;
}

.btn-text {
  font-size: 24rpx;
  color: #444;
}

.article-content image{
   width: 100% !important;
  /* height: 168px !important; */
}