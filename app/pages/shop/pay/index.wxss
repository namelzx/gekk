/* pages/pay/index.wxss */

page{
  font-family: "微软雅黑"
  
}
/* 头部bar */

.post-address {
  border-top: 20rpx solid transparent;
  background: linear-gradient(white, white) padding-box,
                repeating-linear-gradient(-45deg, #dd6c64 0, #dd6c64 12.5%, transparent 0, transparent 25%, #617d92 0, #617d92 36.5%, transparent 0, transparent 50%) 0/90rpx 90rpx;
  padding: 20rpx 60rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.address-item {
  border: 1px solid #d1d1d1;
  border-radius: 10rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  line-height: 50rpx;
  padding: 10rpx 0;
}

.show-addr {
  display: flex;
  padding: 20rpx 30rpx;
}

.self-address {
  width: 80%;
  display: flex;
}

.addr-locate-item {
  width: 10%;
}

.addr-locate-item .van-icon.van-icon-location-o {
  font-size: 50rpx;
  margin-top: 12rpx;
  color: #444;
}

.shop-item-wrapper {
  width: 90%;
}

.self-icon-item {
  width: 20%;
  margin-top: 14rpx;
  line-height: 36rpx;
  color: #dd6c64;
}

.self-icon-item text {
  background: #fff;
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 70rpx;
  border: 1px solid #dd6c64;
}

.shop-addr {
  font-size: 28rpx;
  color: #333;
}

.shop-distance {
  color: #555;
  font-size: 24rpx;
}

.plus-icon {
  display: inline-block;
  margin: 0rpx 12rpx;
  position: relative;
}

.plus-icon .van-icon.van-icon-plus {
  position: absolute;
  top: -28rpx;
  left: -28rpx;
}

/* 选择商品的信息 */

.pick-goods {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.pg-img {
  width: 20%;
  background: #e6e6e6;
}

.pg-img image {
  width: 120rpx;
  height: 120rpx;
  padding: 6rpx 10rpx;
}

.pg-detail {
  width: 65%;
  font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: 300;
}

.pg-detail .pg-name {
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.pg-detail .pg-type {
  color: #a1a1a1;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.pg-price {
  font-size: 24rpx;
  color: #dd6c64;
  width: 15%;
}

.pg-price .price {
  padding: 10rpx 0;
  margin: 10rpx 0;
}

.pg-price .amount {
  color: #a1a1a1;
  text-align: right;
}

/* 优惠券 */

.sale-off, .tax-ticket {
  display: flex;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #000;
  border-bottom: 10rpx solid #f5f5f5;
  overflow: hidden;
}

.ticket-left {
  flex: 1;
  text-align: left;
  font-weight: 300;
}

.ticket-right {
  flex: 1;
  text-align: right;
  position: relative;
}

.ticket-right .text {
  position: absolute;
  right: 30rpx;
}

.sale-off .ticket-right .text text {
  color: #dd6c64;
  margin: 0 4rpx;
  font-weight: 400;
}

.ticket-right .arrow-icon {
  position: absolute;
  right: 0;
  top: 8rpx;
  font-size: 25rpx;
  color: #555;
}

/* 费用清单 */

.fee-list {
  padding: 20rpx 30rpx;
  border-bottom: 10rpx solid #f5f5f5;
}

.good-fee, .poster-fee, .all-fee {
  display: flex;
  padding: 14rpx 0;
}

.fee-list .fee-left {
  text-align: left;
  flex: 1;
  color: #000;
  font-size: 28rpx;
  font-weight: 300;
}

.fee-list .fee-right {
  text-align: right;
  flex: 1;
  color: #666;
  font-size: 28rpx;
}

.fee-list .all-fee .fee-right {
  color: #dd6c64;
}

.tax-ticket .ticket-right .text text {
  color: #555;
  margin: 0 4rpx;
  font-weight: 400;
}

.go-pay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  display: flex;
  font-size: 28rpx;
}

.pay-left {
  width: 75%;
  text-align: right;
  margin-right: 20rpx;
  padding: 30rpx 0;
}

.pay-left text:first-child {
  font-size: 26rpx;
  color: #666;
  margin: 0 6rpx;
}

.pay-left text:last-child {
  color: #dd6c64;
  margin: 0 4rpx;
}

.pay-right {
  width: 25%;
  text-align: center;
  border-left: 1px solid #f5f5f5;
  background: #000;
  color: #fff;
  padding: 30rpx 0;
}

/* 弹出层 */

.van-bottom-enter-to.van-popup {
  height: 1000rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: #f5f5f5;
}

.pop-header {
  padding: 30rpx;
  color: #333;
  text-align: center;
  position: relative;
}

.pop-close {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  color: #666;
}

/* 收货地址弹出层开始 */

.address-list {
  padding: 20rpx 30rpx;
}

.list-title {
  padding: 20rpx 0;
  color: #333;
}

.choise-addr-item {
  margin: 8px 0;
  padding: 16rpx 0;
  display: block;
  color: #333;
  font-size: 26rpx;
}

.choise-addr-item .van-radio .van-radio__label {
  margin-top: 6rpx;
}

.nearby-shop-cell {
  position: relative;
}

.nearby-shop-list {
  display: flex;
  text-align: left;
  width: 620rpx;
}

.nearby-shop-detail {
  width: 72%;
  color: #333;
}

.nearby-shop-detail .shop-detail-name {
  font-size: 32rpx;
}

.nearby-shop-detail .shop-on-sale, .nearby-shop-detail .shop-detail-locate {
  display: flex;
  color: #777;
}

.nearby-shop-detail .shop-on-sale .on-sale-icon {
  margin-top: 5rpx;
  margin-right: 6rpx;
}

.nearby-shop-detail .shop-detail-locate .detail-locate-icon {
  margin-top: 5rpx;
  font-size: 33rpx;
  margin-left: -2rpx;
}

.nearby-shop-detail .shop-detail-locate text {
  width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nearby-shop-distance {
  width: 28%;
  font-size: 26rpx;
  line-height: 152rpx;
  color: #333;
}

.nearby-shop-radio-item {
  position: absolute;
  right: 30rpx;
  top: 70rpx;
}

/* 收货地址弹出层结束 */

/* 优惠券弹出层开始 */

.ticket-cell {
  position: relative;
}

.value-class {
  flex: none !important;
}

.ticket-wrapper {
  width: 700rpx;
  display: flex;
  height: 200rpx;
}

.ticket-wrapper .ticket-img {
  width: 70%;
  position: relative;
}

.ticket-wrapper .ticket-img image {
  width: 100%;
  height: 100%;
}

.ticket-img-text {
  position: absolute;
  z-index: 9;
  top: 50rpx;
  left: 60rpx;
  text-align: center;
  color: #000;
}

.ticket-img-text .img-text-top {
  font-size: 75rpx;
  font-family: courier;
}

.ticket-img-text .img-text-top text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.ticket-img-text .img-text-bottom {
  font-size: 28rpx;
  font-family: verdana;
}

.ticket-text {
  width: 100%;
  text-align: left;
  background-color: #fff;
  color: #555;
  padding-left: 20rpx;
  padding-top: 50rpx;
}

.ticket-radio-item {
  position: absolute;
  top: 100rpx;
  right: 40rpx;
}

/* 优惠券弹出层结束 */

/* 发票信息弹出层开始 */

.pick-tax, .tax-invoise, .receive-info, .tax-info {
  padding: 30rpx 60rpx 0 80rpx;
}

.radio-item {
  display: inline-block;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.radio-item .van-radio__icon-wrap, .van-radio__label {
  line-height: 32rpx !important;
  margin-left: 10rpx !important;
}

.radio-item .van-radio__icon.van-radio__icon--round {
  width: 28rpx;
  height: 28rpx;
}

.radio-item .van-radio__icon.van-radio__icon--round .van-icon.van-icon-success {
  line-height: 28rpx !important;
  font-size: 24rpx;
  margin-left: 2rpx;
}

.tax-invoise .invoise-title, .receive-info .info-title, .tax-info .info-title {
  padding: 0rpx 18rpx 20rpx;
  color: #333;
  font-size: 30rpx;
}

.tax-invoise .invoise-title {
  padding-bottom: 0;
}

.tax-invoise .invoise-type {
  padding: 16rpx 0 10rpx;
}

.info-cell-item .van-cell {
  padding: 8rpx 16rpx !important;
  background: #f5f5f5;
}

.info-cell-item .van-field__body {
  padding: 12rpx 20rpx;
  background: #fff;
}

.info-cell-item .van-cell__title {
  max-width: 80px !important;
  min-width: 80px !important;
  line-height: 72rpx;
  font-size: 26rpx;
  color: #555;
}

.info-title, .checkbox-item {
  display: inline-block;
  font-size: 28rpx;
}

.info-detail {
  padding: 0 16rpx;
}

.info-detail text {
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
}

.checkbox-item .van-checkbox__icon.van-checkbox__icon--round {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.checkbox-item .van-icon.van-icon-success {
  line-height: 14rpx !important;
  font-size: 24rpx;
  margin-left: 1rpx;
}

.checkbox-item .van-checkbox__label {
  line-height: 32rpx;
  margin-left: 10rpx;
}

/* 发票信息弹出层结束 */

.self-list{
  width: 750rpx;

}